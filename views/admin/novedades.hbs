<script
  src="https://kit.fontawesome.com/b85fe5262a.js"
  crossorigin="anonymous"
></script>

<div class="container" style="margin-top: 50px auto">
  <div class="row">
    <p class="text-end">Hola
      {{usuario}}!
      <a class="btn btn-danger" href="/admin/login">
        Cerrar sesiÃ³n
        <i class="fas fa-sign-out-alt"></i></a></p>
  </div>

  <div class="row">
    <div class="col-7">
      <h2>Listado de Publicidades</h2>
    </div>
    <div class="col-5 text-end">
      <a href="/admin/novedades/agregar" class="btn btn-success"><i
          class="fa fa-plus"
          aria-hidden="true"
        ></i>Agregar Publicidad</a>
      <a href="http://localhost:3000/admin/principal" class="btn btn-success"><i
          class="fas fa-long-arrow-alt-left"
        ></i>Volver</a>
    </div>
  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="table-dark">
            <th scope="col">#</th>
            <th class="col">Imagen</th>
            <th class="col text-end">Eliminar</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
            <tr>
              <th scope="row">{{ID}}</th>
              <td>{{{imagen}}}</td>
              <td class="text-end">
                <a
                  class="btn btn-secondary"
                  href="/admin/novedades/eliminar/{{img_id}}"
                ><i class="fa fa-trash-alt"></i></a>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>